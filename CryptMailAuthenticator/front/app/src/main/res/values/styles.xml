<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WhiteSearchTheme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
    <!-- Base application theme -->
    <style name="Theme.YourApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>
    <!-- TextInputLayout style -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/secondary_text</item>
    </style>
    <style name="RoundedTextInputLayout" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <!-- Add this inside your <resources> tag -->
    <style name="DropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/design_default_color_on_primary</item>
        <item name="boxStrokeColor">@color/design_default_color_primary</item>
        <item name="hintTextColor">@color/design_default_color_primary</item>
    </style>
    <style name="GenderDropdownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dropdown_stroke_color</item>
        <item name="hintTextColor">@color/design_default_color_primary</item>
        <item name="android:textColorHint">@color/design_default_color_on_primary</item>
        <item name="boxBackgroundColor">@color/primary_light</item>
    </style>
</resources>